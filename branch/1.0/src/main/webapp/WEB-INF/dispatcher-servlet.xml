<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="exceptionResolver" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props>
                <prop key="org.springframework.dao.DataAccessException">        
                    dataAccessFailure
                </prop>
            </props>
        </property>
    </bean>

    <bean id="filenameController" class="org.springframework.web.servlet.mvc.UrlFilenameViewController"/>

    <bean id="fileUploadController" class="org.appfuse.webapp.controller.FileUploadController">
        <property name="validator" ref="beanValidator"/>
        <property name="cancelView" value="redirect:mainMenu.html"/>
        <property name="formView" value="uploadForm"/>
        <property name="successView" value="uploadDisplay"/>
    </bean>

    <bean id="passwordHintController" class="org.appfuse.webapp.controller.PasswordHintController">
        <property name="userManager" ref="userManager"/>
        <property name="messageSource" ref="messageSource"/>
        <property name="mailEngine" ref="mailEngine"/>
        <property name="message" ref="mailMessage"/>
    </bean>

    <bean id="reloadController" class="org.appfuse.webapp.controller.ReloadController"/>

    <bean id="signupController" class="org.appfuse.webapp.controller.SignupController">
        <property name="validator" ref="beanValidator"/>
        <property name="formView" value="signup"/>
        <property name="successView" value="redirect:mainMenu.html"/>
        <property name="userManager" ref="userManager"/>
        <property name="roleManager" ref="roleManager"/>
        <property name="mailEngine" ref="mailEngine"/>
        <property name="message" ref="mailMessage"/>
        <property name="templateName" value="accountCreated.vm"/>
    </bean>

    <bean id="userController" class="org.appfuse.webapp.controller.UserController">
        <property name="userManager" ref="userManager"/>
    </bean>

    <bean id="userFormController" class="org.appfuse.webapp.controller.UserFormController">
        <property name="validator" ref="beanValidator"/>
        <property name="formView" value="userForm"/>
        <property name="successView" value="redirect:users.html"/>
        <property name="cancelView" value="redirect:mainMenu.html"/>
        <property name="userManager" ref="userManager"/>
        <property name="roleManager" ref="roleManager"/>
        <property name="mailEngine" ref="mailEngine"/>
        <property name="message" ref="mailMessage"/>
        <property name="templateName" value="accountCreated.vm"/>
    </bean>

    <!-- Add additional controller beans here -->

    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="2097152"/>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="ApplicationResources"/>
        <property name="useCodeAsDefaultMessage" value="true"/>
    </bean>

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
                /admin/activeUsers.html=filenameController
                /admin/flushCache.html=filenameController
                /admin/reload.html=reloadController
                /admin/users.html=userController
                /mainMenu.html=filenameController
                /passwordHint.html=passwordHintController
                /search.html=searchController
                /reindex.html=indexController
            </value>
        </property>
        <property name="order" value="0"/>
    </bean>

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping">
        <property name="order" value="1"/>
    </bean>

    <!-- View Resolver for JSPs -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="requestContextAttribute" value="rc"/>
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
    
    <!--  your own pages -->
    <bean id="catalogFormController" class="local.tux.app.web.controller.CatalogFormController">
    	 <property name="validator" ref="beanValidator"/>
    	<property name="commandClass" value="local.tux.app.model.Catalog" />
    	<property name="commandName" value="catalog" />
    	<property name="successView" value="redirect:catalogform.html"/>
    	<property name="lookUpManager" ref="catalogManager" />
    </bean>    
    <bean id="imageFormController" class="local.tux.app.web.controller.ImageFormController">
    	 <property name="validator" ref="beanValidator"/>
    	<property name="commandClass" value="local.tux.app.model.Image" />
    	<property name="commandName" value="image" />
    	<property name="productManager" ref="productManager" />
    	<property name="lookUpManager" ref="imageManager" />
    </bean>
    <bean id="brandNameFormController" class="local.tux.app.web.controller.BrandNameFormController">
       	<property name="validator" ref="beanValidator"/>
       	<property name="commandClass" value="local.tux.app.model.BrandName" />
    	<property name="commandName" value="brandName" />
    	<property name="lookUpManager" ref="brandNameManager" />
    	<property name="manufacturerManager" ref="manufacturerManager" />
    </bean>
    <bean id="ingredientFormController" class="local.tux.app.web.controller.IngredientFormController">
      	<property name="validator" ref="beanValidator"/>
    	<property name="commandClass" value="local.tux.app.model.Ingredient" />
    	<property name="commandName" value="ingredient" />
    	<property name="lookUpManager" ref="ingredientManager" />
    </bean>
    <bean id="manufacturerFormController" class="local.tux.app.web.controller.ManufacturerFormController">
    	 <property name="validator" ref="beanValidator"/>
    	<property name="commandClass" value="local.tux.app.model.Manufacturer" />
    	<property name="commandName" value="manufacturer" />
    	<property name="successView" value="redirect:manufacturerform.html"/>
    	<property name="lookUpManager" ref="manufacturerManager" />
    </bean>
    <bean id="productListController" class="local.tux.app.web.controller.ProductListController">
    	<property name="userManager" ref="userManager" />
    	<property name="paginatedListFactory" ref="paginatedListFactory" />
    	<property name="pagingLookupManager" ref="pagingLookupManager" />
    	<property name="pojo" value="local.tux.app.model.Product" />
    </bean>
    <bean id="productDetailController" class="local.tux.app.web.controller.ProductDetailController">
    	<property name="productManager" ref="productManager" />
    </bean> 
    <bean id="productFormController" class="local.tux.app.web.controller.ProductFormController">
    	<property name="userManager" ref="userManager" />
    	<property name="commandClass" value="local.tux.app.model.Product" />
    	<property name="commandName" value="product" />
    	<property name="successView" value="redirect:productlist.html" />
    	<property name="productManager" ref="productManager" />
    	<property name="catalogManager" ref="catalogManager" />
    	<property name="manufacturerManager" ref="manufacturerManager" />
    	<property name="brandNameManager" ref="brandNameManager" />
    </bean>
    
    <!--  compass pages -->
    <bean id="indexController" class="org.compass.spring.web.mvc.CompassIndexController">
        <property name="compassGps"><ref bean="compassGps"/></property>
        <property name="indexView"><value>reindex</value></property>
        <property name="indexResultsView"><value>reindex</value></property>
    </bean>

    <bean id="searchController" class="local.tux.app.web.controller.SearchController">
        <property name="compass"><ref bean="compass"/></property>
        <property name="searchView"><value>search</value></property>
        <property name="searchResultsView"><value>search</value></property>
        <property name="pageSize"><value>25</value></property>
    </bean> 
    
    <bean id="specialController" class="local.tux.app.web.controller.SpecialController">
    	<property name="paginatedListFactory" ref="paginatedListFactory" />
    	<property name="pagingLookupManager" ref="pagingLookupManager" />
    	<property name="pojo" value="local.tux.app.model.Product" />
    </bean>
</beans>
