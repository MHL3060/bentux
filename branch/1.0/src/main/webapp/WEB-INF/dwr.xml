<!DOCTYPE dwr PUBLIC
    "-//GetAhead Limited//DTD Direct Web Remoting 2.0//EN"
    "http://getahead.ltd.uk/dwr/dwr20.dtd">
<dwr>
    <allow>
        <create creator="spring" javascript="UserManager">
            <param name="class" value="org.appfuse.service.UserManager"/>
            <param name="beanName" value="userManager"/>
            <include method="getUsers"/>
        </create>
        <create creator="spring" javascript="catalogManager">
        	<param name="class" value="local.tux.app.service.CatalogManager" />
        	<param name="beanName" value="catalogManager" />
        	<include method="getRelativeObjects" />
        	<include method="getParents" />
        </create>
        <create creator="spring" javascript="brandNameManager">
        	<param name="class" value="local.tux.app.service.LookUpNameGenericManager" />
        	<param name="beanName" value="brandNameManager" />
        	<include method="getRelativeObjects" />
        	<include method="getAll" />
        </create>
        
        <create creator="spring" javascript="manufacturerManager" >
        	<param name="class" value="local.tux.app.service.LookUpNameGenericManager" />
        	<param name="beanName" value="manufacturerManager" />
        	<include method="getRelativeObjects" />
        	<include method="getAll" />
        </create>
        <convert converter="bean" match="local.tux.app.model.BrandName" />
        <convert converter="bean" match="local.tux.app.model.Manufacturer" />
        <convert converter="bean" match="org.appfuse.model.User"/>
        <convert converter="bean" match="local.tux.app.model.Catalog" />
    </allow>
</dwr>
